/* single_level_dir.c
   Simulates files in one directory */
#include <stdio.h>
#include <string.h>
#define MAX 100
char dir[MAX][50];
int count=0;
int find(char *name){ for(int i=0;i<count;i++) if(strcmp(dir[i],name)==0) return i; return -1; }
int main(){
    int ch; char name[50];
    do{
        printf("1-Create 2-Delete 3-Search 4-List 0-Exit: "); scanf("%d",&ch);
        if(ch==1){ printf("Filename: "); scanf("%s",name); if(find(name)==-1) strcpy(dir[count++],name); else printf("Exists\n"); }
        else if(ch==2){ printf("Filename: "); scanf("%s",name); int i=find(name); if(i!=-1){ for(int j=i;j<count-1;j++) strcpy(dir[j],dir[j+1]); count--; } else printf("Not found\n"); }
        else if(ch==3){ printf("Filename: "); scanf("%s",name); printf(find(name)==-1?"Not found\n":"Found\n"); }
        else if(ch==4){ for(int i=0;i<count;i++) printf("%s\n",dir[i]); }
    }while(ch!=0);
    return 0;
}
